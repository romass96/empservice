<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="login">
        <field-validator type="requiredstring">
            <message>Поле 'Логин' не должно быть пустым</message>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message>Поле 'Пароль' не должно быть пустым</message>
        </field-validator>
    </field>
</validators>